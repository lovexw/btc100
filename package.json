{
  "name": "btc-price-tracker-cloudflare",
  "version": "1.0.0",
  "description": "Bitcoin price tracker using Cloudflare Workers and KV storage",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --env production",
    "deploy:dev": "wrangler deploy --env development",
    "tail": "wrangler tail --env production",
    "kv:create": "wrangler kv:namespace create BTC_KV",
    "kv:create:preview": "wrangler kv:namespace create BTC_KV --preview"
  },
  "keywords": [
    "bitcoin",
    "price",
    "tracker",
    "cloudflare",
    "workers",
    "kv"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "wrangler": "^3.0.0"
  }
}